{
  "name": "tvsm",
  "version": "1.0.0",
  "description": "Tv Show Manager",
  "main": "src/main.ts",
  "type": "module",
  "author": "Armando",
  "scripts": {
    "build": "mkdir -p dist && rm -rf dist/* && cp -r public/* dist && sass --style compressed src/style.scss dist/style.css && esbuild src/main.tsx --sourcemap --bundle --outdir=dist --outbase=src --minify && jsx dist",
    "watch": "dirwatch -watch src -serve dist -run 'npm run build'"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "sass": "^1.77.5",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "jsx": "file:../../rust/jsx/dist/jsx-1.0.0.tgz"
  }
}
