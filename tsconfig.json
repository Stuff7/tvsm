{
  "extends": "jsx/tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "checkJs": true,
    "rootDir": ".",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowUnusedLabels": true,
    "outDir": "build",
    "sourceMap": true,
    "noImplicitThis": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
    }
  },
  "include": ["src/**/*", "*.d.ts"],
  "exclude": [
    "build",
    "node_modules",
    "**/node_modules/*"
  ]
}
